{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "dist/",
    "rootDir": "..",
    "declaration": false,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "inlineSourceMap": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "paths": {
      "@root/*": ["../*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

