{
 "compilerOptions": {
   "module": "esnext",
   "baseUrl": "./",
   "declaration": false,
   "outDir": "./dist/",
   "noImplicitAny": false,
   "removeComments": true,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "moduleResolution": "node",
   "importHelpers": true,
   "target": "es2015",
   "sourceMap": true,
   "typeRoots": [
      "node_modules/@types"
   ],
   "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@root/*": ["./*"]
    },
    "rootDir": "."
 },
 "include": [
   "packs"
 ],
 "exclude": [
   "node_modules",
   "**/*.spec.ts"
 ]
}

