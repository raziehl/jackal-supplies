{
 "compilerOptions": {
   "module": "commonjs",
   "target": "es2015",
   "rootDir": ".",
   "declaration": false,
   "downlevelIteration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "moduleResolution": "node",
   "importHelpers": true,
   "sourceMap": true,
   "baseUrl": "./",
   "outDir": "./dist/",
   "paths": {
     "@root/*": ["./*"]
   },
   "typeRoots": [
      "node_modules/@types"
   ],
   "lib": [
      "es2018",
      "dom"
    ]
 },
 "include": [
   "packs"
 ],
 "exclude": [
   "node_modules",
   "**/*.spec.ts"
 ]
}

