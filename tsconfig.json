{
 "compilerOptions": {
   "module": "commonjs",
   "target": "es2015",
   "rootDir": ".",
   "declaration": false,
   "downlevelIteration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "moduleResolution": "node",
   "importHelpers": true,
   "sourceMap": true,
   "baseUrl": "./",
   "outDir": "./dist/",
   "paths": {
     "@root/*": ["./*"],
     "@nest-root/*": ["./packs/lisk-nest/*"],
     "@nest-src/*": ["./packs/lisk-nest/src/*"]
   },
   "typeRoots": [
      "node_modules/@types",
      "common/types"
   ],
   "lib": [
      "es2018",
      "dom"
    ]
 },
 "exclude": [
   "node_modules",
   "common/types",
   "**/*.spec.ts"
 ]
}

